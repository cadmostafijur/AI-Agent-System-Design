# ============================================
# ReplyForce AI — Environment Configuration
# ============================================
# Copy this file to .env and fill in the values

# ── Application ──
NODE_ENV=development
APP_PORT=3001
APP_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# ── Database ──
DATABASE_URL=postgresql://replyforce:replyforce_dev@localhost:5432/replyforce_dev
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ── Redis ──
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ── JWT Auth ──
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# ── Encryption ──
ENCRYPTION_KEY=32-byte-hex-key-for-aes-256-gcm-encryption
ENCRYPTION_IV_LENGTH=16

# ── OpenAI ──
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL_PRIMARY=gpt-4o
OPENAI_MODEL_FAST=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# ── Facebook / Instagram ──
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_VERIFY_TOKEN=your-webhook-verify-token
FACEBOOK_GRAPH_API_VERSION=v18.0

# ── WhatsApp Business ──
WHATSAPP_BUSINESS_ID=your-whatsapp-business-id
WHATSAPP_API_TOKEN=your-whatsapp-api-token
WHATSAPP_VERIFY_TOKEN=your-whatsapp-verify-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# ── Twitter / X ──
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_WEBHOOK_ENV=production

# ── CRM: HubSpot ──
HUBSPOT_CLIENT_ID=your-hubspot-client-id
HUBSPOT_CLIENT_SECRET=your-hubspot-client-secret
HUBSPOT_REDIRECT_URI=http://localhost:3001/api/v1/crm/callback/hubspot

# ── CRM: Salesforce ──
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
SALESFORCE_REDIRECT_URI=http://localhost:3001/api/v1/crm/callback/salesforce

# ── AWS (for S3, KMS, Secrets Manager) ──
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=replyforce-media
S3_BUCKET_REGION=us-east-1

# ── Queue Settings ──
QUEUE_INBOUND_CONCURRENCY=20
QUEUE_AI_CONCURRENCY=10
QUEUE_OUTBOUND_CONCURRENCY=15
QUEUE_CRM_CONCURRENCY=5

# ── Rate Limiting ──
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ── Monitoring ──
SENTRY_DSN=https://your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key
LOG_LEVEL=debug

# ── CORS ──
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
